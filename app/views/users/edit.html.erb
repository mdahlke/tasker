<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

  <div class="row">  
    <div class="col-xs-12">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="row">  
    <div class="col-xs-12">
      <%= f.label :email %>
      <%= f.text_field :email %>

    </div> 
  </div>
  <div class="row">  
    <div class="col-xs-12">
      <%= f.label :password %>
      <%= f.password_field :password %>

    </div>  
  </div>
  <div class="row">  
    <div class="col-xs-12">
      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>

  </div>  
  </div>
  <div class="row">  
    <div class="col-xs-12">
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>

  </div>  
  </div>  
    <% end %>

  <div class="row">  
    <div class="col-xs-12">
    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">change</a>
    </div>
  </div>
</div>